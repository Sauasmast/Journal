<form action="/check" method="POST">

  <div class="form-group">
    <label for="exampleInputEmail1"> <b> Today's Date : </b> </label>
    <input type="text" class="form-control" id="exampleInputEmail1" value='{{idea.date}}' readonly="readonly" >
  </div>

  <div class="form-group">
    <label for="titleinput"> <b> Title : </b> </label>
    <input type="text" class="form-control" id="titleinput" placeholder="Enter your Title" value='{{idea.title}}'>
  </div>

  <div class="form-group">
  <label for="textinput"><b> Your Journal : </b> </label>
  <textarea class="form-control" rows="15" cols="50" id="textinput"> {{idea.journal}} </textarea>
  </div>

  <button type="submit" class="btn btn-primary">Edit Journal</button>

</form> 